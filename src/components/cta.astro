---
import AnimatedButton from './ui/animated-button.astro';
---

<div class='relative'>
  <!-- Red section with diagonal cut -->
  <div
    class='bg-accent text-white py-14 sm:py-16
        md:pt-40 md:pb-16 lg:pt-48 xl:pt-64 xl:pb-24 md:clip-path-custom'
  >
    <div class='max-w-screen-sm  mx-auto text-center'>
      <h2
        class='uppercase font-bold text-2xl sm:text-7xl font-heading transition-all duration-700 ease-linear
      is-visible opacity-100 translate-y-0
      false
      text-white'
      >
        CONTACT
      </h2>
      <p
        class='text-white font-bold md:text-lg lg:text-2xl lg:leading-9 opacity-100'
      >
        Have a project in mind? Let's talk about it. We are here to help you
        with your construction needs.
      </p>
      <AnimatedButton href='/contact'>Contact us</AnimatedButton>
    </div>
  </div>
</div>
