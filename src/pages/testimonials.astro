---
import Sectionhead from '@/components/sectionhead.astro';
import Container from '@/layouts/Container.astro';
import Layout from '@/layouts/Layout.astro';
import TestimonialsComponent from '@/components/testimonials.astro';

function cn(...classes: string[]) {
  return classes.filter(Boolean).join(' ');
}
---

<Layout title='RPM | Testimonials' description='What our customers are saying.'>
  <Container>
    <Sectionhead>
      <Fragment slot='title'>Testimonials</Fragment>
      <Fragment slot='subtitle'>What our customers are saying</Fragment>
    </Sectionhead>
    <TestimonialsComponent />
  </Container>
</Layout>
