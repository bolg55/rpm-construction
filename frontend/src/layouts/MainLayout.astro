---
import type { Post } from '@/interfaces/blog-interface';
import TwSizeIndicator from '@/utils/TwSizeIndicator.astro';
import '@fontsource-variable/inter';
import '@fontsource-variable/montserrat';
import Footer from './Footer.astro';
import Head from './Head.astro';
import Navbar from './navbar/navbar.astro';

interface Props {
  title: string;
  description: string;
  image?: { src: string; alt: string };
  frontmatter?: Post;
  robots?: boolean;
}

const res = await fetch(
  'http://localhost:1337/api/global?populate[0]=navbar.logo.image&populate[1]=navbar.navItems.children&populate[2]=navbar.ctaLink&populate[3]=footer.section.links.children&populate[4]=footer.socialMedia'
);
const { data } = await res.json();
const { navItems, logo, ctaLink } = data?.navbar;

const { title, description, image, frontmatter, robots } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <Head {title} {description} {image} {frontmatter} {robots} />
  <body class='bg-background'>
    <TwSizeIndicator />
    <Navbar {navItems} {ctaLink} {logo} />
    <pre>{JSON.stringify(data,null,2)}</pre>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
