---
import { Dropdown as AstroDropdown, DropdownItems } from 'astro-navbar';
const { title, lastItem, children } = Astro.props;
---

<li class='relative'>
  <AstroDropdown class='group'>
    <button
      class='flex hover:text-accent items-center p-2 lg:p-0 font-semibold tracking-widest transition-all ease-linear uppercase'
    >
      <span>{title}</span>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='3'
        stroke='currentColor'
        class='w-3 h-3 ml-1 mt-0.5 group-open:-rotate-180 transition-transform'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M19.5 8.25l-7.5 7.5-7.5-7.5'></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          'lg:absolute w-full lg:w-48 z-10',
          lastItem
            ? 'lg:right-0 origin-top-right'
            : 'lg:left-0 origin-top-left',
        ]}
      >
        <div
          class='lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col'
        >
          {
            children.map(
              (item: {
                path: string | URL | null | undefined;
                title: string;
              }) => (
                <a
                  href={item.path}
                  class='py-1 hover:font-semibold hover:bg-accent/40 pl-3'
                >
                  {item.title}
                </a>
              )
            )
          }
        </div>
      </div>
    </DropdownItems>
  </AstroDropdown>
</li>
