---
import Link from './link.astro';

const { prevUrl, nextUrl } = Astro.props;
---

<nav class='flex space-x-8 mx-auto sm:w-1/5' aria-label='Blog pages'>
  {
    prevUrl && (
      <Link href={prevUrl} rel='prev' style='secondary'>
        &larr; Prev
      </Link>
    )
  }

  {
    nextUrl && (
      <Link href={nextUrl} rel='next' style='secondary'>
        Next&nbsp;&rarr;
      </Link>
    )
  }
</nav>
