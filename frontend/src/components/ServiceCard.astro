---
interface Props {
  service: Service;
  animationDelay?: number;
}

const { service, animationDelay = 0 } = Astro.props;
import type { Service } from '@/interfaces';
import { getStrapiMedia } from '@/utils/strapi';
---

<div
  class='service-card bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-300 opacity-0 translate-y-4'
  data-animation-delay={animationDelay}
>
  <a href={`/services/${service.slug}`} class='block'>
    <img
      src={getStrapiMedia(service.image.url)}
      alt={service.image.alternativeText || service.title}
      class='w-full h-48 object-cover rounded-t-lg'
    />
    <div class='p-4'>
      <h3 class='text-xl font-semibold font-heading mb-2'>{service.title}</h3>
      <p class='text-gray-600'>{service.summary}</p>
    </div>
  </a>
</div>
