---
interface Props {
  service: Service;
  animationDelay?: number;
}

const { service } = Astro.props;
import type { Service } from '@/interfaces';
import OptimizedImage from './OptimizedImage.astro';
---

<div
  class='bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-300'
  transition:name={service.title}
>
  <a
    href={`/services/${service.slug}`}
    transition:name={service.slug}
    class='block'
  >
    <OptimizedImage
      src={service.image.url}
      alt={service.image.alternativeText || service.title}
      class='w-full h-48 object-cover rounded-t-lg'
      transition:name={`service-image-${service.image.url}`}
    />

    <div class='p-4'>
      <h3 class='text-xl font-semibold font-heading mb-2'>{service.title}</h3>
      <p class='text-gray-600'>{service.summary}</p>
    </div>
  </a>
</div>
