---
import jsonLDGenerator from '@/data/jsonLD';

const res = await fetch('http://localhost:1337/api/seo?populate=seoImage');
const { data } = await res.json();

const { seoImage } = data;

const {
  title,
  description,
  url = Astro.url,
  image,
  frontmatter,
  robots,
} = Astro.props;

const jsonLD = jsonLDGenerator({
  type: frontmatter ? 'post' : 'website',
  post: frontmatter,
  url,
});
---

<!--SEO -->
<link rel='canonical' href={url} />

<!--Open Graph-->
<meta property='og:type' content='website' />
<meta property='og:site_name' content={import.meta.env.PUBLIC_SITE_NAME} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:url' content={url} />
<meta property='og:image' content={image?.src || seoImage.url} />
<meta property='og:image:url' content={image?.src || seoImage.url} />
<meta
  property='og:image:alt'
  content={image?.alt || seoImage.alternativeText}
/>
<meta property='og:image:secure_url' content={image?.src || seoImage.url} />
<meta property='og:image:type' content='image/jpeg' />
<meta property='og:image:width' content='1200' />
<meta property='og:image:height' content='630' />
<meta
  property='og:image:alt'
  content={image?.alt || seoImage.alternativeText}
/>
<meta property='og:locale' content='en_CA' />

<!--Twitter-->
<meta name='twitter:card' content='summary_large_image' />
<meta name='twitter:site' content={import.meta.env.PUBLIC_TWITTER_HANDLE} />
<meta name='twitter:title' content={title} />
<meta name='twitter:description' content={description} />
<meta name='twitter:image' content={image?.src || seoImage.url} />
<meta
  name='twitter:image:alt'
  content={image?.alt || seoImage.alternativeText}
/>
<meta name='twitter:creator' content={import.meta.env.PUBLIC_TWITTER_HANDLE} />
<meta name='twitter:domain' content={import.meta.env.SITE} />

{robots && <meta name='robots' content='noindex, nofollow' />}

<!--JSON LD -->
<Fragment set:html={jsonLD} />
